{% extends 'dashboard/layout.html.twig' %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">Security Dashboard</h1>
            <p class="text-slate-400 mt-1">Real-time security monitoring and threat detection</p>
        </div>
        <div class="flex items-center space-x-2 text-sm text-slate-400">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Last updated: {{ "now"|date("H:i:s") }}
        </div>
    </div>

    <!-- Key Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-blue-600/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                </div>
                <span class="text-xs text-green-400 font-medium">+12%</span>
            </div>
            <h3 class="text-2xl font-bold text-white mb-1">247</h3>
            <p class="text-sm text-slate-400">Total Assets</p>
        </div>

        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-green-600/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <span class="text-xs text-red-400 font-medium">+8%</span>
            </div>
            <h3 class="text-2xl font-bold text-white mb-1">1,429</h3>
            <p class="text-sm text-slate-400">Events Today</p>
        </div>

        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-yellow-600/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                </div>
                <span class="text-xs text-yellow-400 font-medium">3 Active</span>
            </div>
            <h3 class="text-2xl font-bold text-white mb-1">18</h3>
            <p class="text-sm text-slate-400">Active Alerts</p>
        </div>

        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-red-600/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <span class="text-xs text-red-400 font-medium">2 Critical</span>
            </div>
            <h3 class="text-2xl font-bold text-white mb-1">7</h3>
            <p class="text-sm text-slate-400">Open Incidents</p>
        </div>
    </div>

    <!-- Charts and Tables -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Event Timeline Chart -->
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <h2 class="text-lg font-semibold text-white mb-4">Event Timeline (24h)</h2>
            <div class="h-64 bg-slate-900 rounded-lg flex items-center justify-center">
                <div class="text-center text-slate-400">
                    <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                    <p>Event timeline chart will be displayed here</p>
                </div>
            </div>
        </div>

        <!-- Top Risk Assets -->
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <h2 class="text-lg font-semibold text-white mb-4">Top Risk Assets</h2>
            <div class="space-y-3">
                <div class="flex items-center justify-between p-3 bg-slate-900 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-red-600/20 rounded-lg flex items-center justify-center">
                            <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-white">Web-01</p>
                            <p class="text-xs text-slate-400">12 alerts</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-sm font-medium text-red-400">85%</div>
                        <div class="w-20 h-2 bg-slate-700 rounded-full mt-1">
                            <div class="w-4/5 h-2 bg-red-500 rounded-full"></div>
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-between p-3 bg-slate-900 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-yellow-600/20 rounded-lg flex items-center justify-center">
                            <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-white">DB-Primary</p>
                            <p class="text-xs text-slate-400">8 alerts</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-sm font-medium text-yellow-400">72%</div>
                        <div class="w-20 h-2 bg-slate-700 rounded-full mt-1">
                            <div class="w-3/4 h-2 bg-yellow-500 rounded-full"></div>
                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-between p-3 bg-slate-900 rounded-lg">
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-green-600/20 rounded-lg flex items-center justify-center">
                            <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-white">API-Gateway</p>
                            <p class="text-xs text-slate-400">6 alerts</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="text-sm font-medium text-green-400">65%</div>
                        <div class="w-20 h-2 bg-slate-700 rounded-full mt-1">
                            <div class="w-2/3 h-2 bg-green-500 rounded-full"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Alerts -->
    <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-white">Recent Alerts</h2>
            <a href="{{ path('app_alerts') }}" class="text-sm text-blue-400 hover:text-blue-300">View all</a>
        </div>
        <div class="space-y-3">
            <div class="flex items-center justify-between p-4 bg-slate-900 rounded-lg border-l-4 border-red-500">
                <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 bg-red-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-white">Multiple Failed Login Attempts</p>
                        <p class="text-xs text-slate-400">Source: 192.168.1.100</p>
                    </div>
                </div>
                <div class="text-right">
                    <span class="text-xs text-red-400 font-medium">Critical</span>
                    <p class="text-xs text-slate-400">2 min ago</p>
                </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-slate-900 rounded-lg border-l-4 border-yellow-500">
                <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 bg-yellow-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-white">Unusual Data Transfer Volume</p>
                        <p class="text-xs text-slate-400">Source: Web-01</p>
                    </div>
                </div>
                <div class="text-right">
                    <span class="text-xs text-yellow-400 font-medium">Warning</span>
                    <p class="text-xs text-slate-400">5 min ago</p>
                </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-slate-900 rounded-lg border-l-4 border-blue-500">
                <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 bg-blue-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-white">System Backup Completed</p>
                        <p class="text-xs text-slate-400">Source: Backup-Server</p>
                    </div>
                </div>
                <div class="text-right">
                    <span class="text-xs text-blue-400 font-medium">Info</span>
                    <p class="text-xs text-slate-400">15 min ago</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
