{% extends 'dashboard/layout.html.twig' %}

{% block title %}{{ asset.hostname }} - Asset Details{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">{{ asset.hostname }}</h1>
            <p class="text-slate-400 mt-1">Asset details and monitoring information</p>
        </div>
        <div class="flex items-center space-x-3">
            <a href="{{ path('app_assets') }}" class="bg-slate-600 hover:bg-slate-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                ← Back to Assets
            </a>
            <a href="{{ path('app_asset_edit', {'id': asset.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                Edit Asset
            </a>
        </div>
    </div>

    <!-- Asset Overview Card -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-white">Asset Information</h2>
                <div class="flex items-center space-x-2">
                    <span class="px-2 py-1 text-xs font-medium rounded-full 
                        {% if asset.status == 'active' %}bg-green-600/20 text-green-400
                        {% elseif asset.status == 'inactive' %}bg-red-600/20 text-red-400
                        {% elseif asset.status == 'maintenance' %}bg-yellow-600/20 text-yellow-400
                        {% else %}bg-slate-600/20 text-slate-400{% endif %}">
                        {{ asset.status|capitalize }}
                    </span>
                </div>
            </div>
        </div>
        
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Basic Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-medium text-white">Basic Information</h3>
                    
                    <div class="space-y-3">
                        <div class="flex justify-between py-2 border-b border-slate-700">
                            <span class="text-sm font-medium text-slate-400">Hostname</span>
                            <span class="text-sm text-white font-mono">{{ asset.hostname }}</span>
                        </div>
                        
                        <div class="flex justify-between py-2 border-b border-slate-700">
                            <span class="text-sm font-medium text-slate-400">IP Address</span>
                            <span class="text-sm text-white font-mono">{{ asset.ip }}</span>
                        </div>
                        
                        <div class="flex justify-between py-2 border-b border-slate-700">
                            <span class="text-sm font-medium text-slate-400">Asset Type</span>
                            <span class="text-sm text-white">{{ asset.type|capitalize }}</span>
                        </div>
                        
                        <div class="flex justify-between py-2 border-b border-slate-700">
                            <span class="text-sm font-medium text-slate-400">Asset ID</span>
                            <span class="text-sm text-white font-mono">#{{ asset.id }}</span>
                        </div>
                    </div>
                </div>

                <!-- Status Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-medium text-white">Status Information</h3>
                    
                    <div class="space-y-3">
                        <div class="flex justify-between py-2 border-b border-slate-700">
                            <span class="text-sm font-medium text-slate-400">Current Status</span>
                            <span class="px-2 py-1 text-xs font-medium rounded-full 
                                {% if asset.status == 'active' %}bg-green-600/20 text-green-400
                                {% elseif asset.status == 'inactive' %}bg-red-600/20 text-red-400
                                {% elseif asset.status == 'maintenance' %}bg-yellow-600/20 text-yellow-400
                                {% else %}bg-slate-600/20 text-slate-400{% endif %}">
                                {{ asset.status|capitalize }}
                            </span>
                        </div>
                        
                        <div class="flex justify-between py-2 border-b border-slate-700">
                            <span class="text-sm font-medium text-slate-400">Last Seen</span>
                            <span class="text-sm text-white">Just now</span>
                        </div>
                        
                        <div class="flex justify-between py-2 border-b border-slate-700">
                            <span class="text-sm font-medium text-slate-400">Monitoring Status</span>
                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-600/20 text-green-400">
                                Monitored
                            </span>
                        </div>
                        
                        <div class="flex justify-between py-2 border-b border-slate-700">
                            <span class="text-sm font-medium text-slate-400">Risk Level</span>
                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-600/20 text-blue-400">
                                Medium
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Events -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h2 class="text-lg font-semibold text-white">Recent Events</h2>
            <p class="text-slate-400 text-sm mt-1">Latest security events and activities</p>
        </div>
        
        <div class="p-6">
            <div class="space-y-4">
                <!-- Sample Events -->
                <div class="flex items-center space-x-3 p-3 bg-slate-700/50 rounded-lg">
                    <div class="w-8 h-8 bg-green-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="text-sm text-white">System health check passed</p>
                        <p class="text-xs text-slate-400">2 minutes ago</p>
                    </div>
                </div>
                
                <div class="flex items-center space-x-3 p-3 bg-slate-700/50 rounded-lg">
                    <div class="w-8 h-8 bg-blue-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="text-sm text-white">Software update available</p>
                        <p class="text-xs text-slate-400">1 hour ago</p>
                    </div>
                </div>
                
                <div class="flex items-center space-x-3 p-3 bg-slate-700/50 rounded-lg">
                    <div class="w-8 h-8 bg-yellow-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.502 0L4.316 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="text-sm text-white">High CPU usage detected</p>
                        <p class="text-xs text-slate-400">3 hours ago</p>
                    </div>
                </div>
            </div>
            
            <div class="mt-4 text-center">
                <a href="#" class="text-sm text-blue-400 hover:text-blue-300">View all events →</a>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Quick Actions</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <button class="bg-slate-700 hover:bg-slate-600 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                Run Health Check
            </button>
            <button class="bg-slate-700 hover:bg-slate-600 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                View Logs
            </button>
            <button class="bg-slate-700 hover:bg-slate-600 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                Export Report
            </button>
        </div>
    </div>
</div>
{% endblock %}
