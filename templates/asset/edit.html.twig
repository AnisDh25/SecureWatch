{% extends 'dashboard/layout.html.twig' %}

{% block title %}Edit {{ asset.hostname }} - Asset{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">Edit Asset</h1>
            <p class="text-slate-400 mt-1">Update asset information for {{ asset.hostname }}</p>
        </div>
        <a href="{{ path('app_assets') }}" class="bg-slate-600 hover:bg-slate-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
            ‚Üê Back to Assets
        </a>
    </div>

    <!-- Form Card -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h2 class="text-lg font-semibold text-white">Update Asset Information</h2>
            <p class="text-slate-400 text-sm mt-1">Modify the details for this asset</p>
        </div>
        
        <form action="{{ path('app_asset_edit', {'id': asset.id}) }}" method="post" class="p-6 space-y-6">
            <!-- Hostname -->
            <div class="space-y-2">
                <label for="hostname" class="block text-sm font-medium text-slate-300">
                    Hostname <span class="text-red-400">*</span>
                </label>
                <input
                    type="text"
                    id="hostname"
                    name="hostname"
                    value="{{ asset.hostname }}"
                    required
                    class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="server-01.example.com"
                >
                <p class="text-xs text-slate-400">The unique hostname or name of the asset</p>
            </div>

            <!-- IP Address -->
            <div class="space-y-2">
                <label for="ip" class="block text-sm font-medium text-slate-300">
                    IP Address <span class="text-red-400">*</span>
                </label>
                <input
                    type="text"
                    id="ip"
                    name="ip"
                    value="{{ asset.ip }}"
                    required
                    pattern="^(?:[0-9]{1,3}\.){3}[0-9]{1,3}$"
                    class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="192.168.1.100"
                >
                <p class="text-xs text-slate-400">The IPv4 address of the asset</p>
            </div>

            <!-- Asset Type -->
            <div class="space-y-2">
                <label for="type" class="block text-sm font-medium text-slate-300">
                    Asset Type <span class="text-red-400">*</span>
                </label>
                <select
                    id="type"
                    name="type"
                    required
                    class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
                    <option value="">Select asset type...</option>
                    <option value="server" {{ asset.type == 'server' ? 'selected' : '' }}>Server</option>
                    <option value="workstation" {{ asset.type == 'workstation' ? 'selected' : '' }}>Workstation</option>
                    <option value="router" {{ asset.type == 'router' ? 'selected' : '' }}>Router</option>
                    <option value="switch" {{ asset.type == 'switch' ? 'selected' : '' }}>Switch</option>
                    <option value="firewall" {{ asset.type == 'firewall' ? 'selected' : '' }}>Firewall</option>
                    <option value="database" {{ asset.type == 'database' ? 'selected' : '' }}>Database</option>
                    <option value="application" {{ asset.type == 'application' ? 'selected' : '' }}>Application</option>
                    <option value="mobile" {{ asset.type == 'mobile' ? 'selected' : '' }}>Mobile Device</option>
                    <option value="iot" {{ asset.type == 'iot' ? 'selected' : '' }}>IoT Device</option>
                    <option value="other" {{ asset.type == 'other' ? 'selected' : '' }}>Other</option>
                </select>
                <p class="text-xs text-slate-400">Select the type of asset</p>
            </div>

            <!-- Status -->
            <div class="space-y-2">
                <label for="status" class="block text-sm font-medium text-slate-300">
                    Status <span class="text-red-400">*</span>
                </label>
                <select
                    id="status"
                    name="status"
                    required
                    class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
                    <option value="active" {{ asset.status == 'active' ? 'selected' : '' }}>Active</option>
                    <option value="inactive" {{ asset.status == 'inactive' ? 'selected' : '' }}>Inactive</option>
                    <option value="maintenance" {{ asset.status == 'maintenance' ? 'selected' : '' }}>Maintenance</option>
                    <option value="retired" {{ asset.status == 'retired' ? 'selected' : '' }}>Retired</option>
                </select>
                <p class="text-xs text-slate-400">Current status of the asset</p>
            </div>

            <!-- Asset Information -->
            <div class="bg-slate-700/50 rounded-lg p-4">
                <h3 class="text-sm font-medium text-slate-300 mb-3">Current Asset Information</h3>
                <div class="grid grid-cols-2 gap-4 text-sm">
                    <div>
                        <span class="text-slate-400">Asset ID:</span>
                        <span class="text-white ml-2 font-mono">#{{ asset.id }}</span>
                    </div>
                    <div>
                        <span class="text-slate-400">Created:</span>
                        <span class="text-white ml-2">Today</span>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end space-x-3 pt-6 border-t border-slate-700">
                <a href="{{ path('app_asset_show', {'id': asset.id}) }}" class="bg-slate-600 hover:bg-slate-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                    Cancel
                </a>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Update Asset
                </button>
            </div>
        </form>
    </div>

    <!-- Danger Zone -->
    <div class="bg-red-900/20 border border-red-600/30 rounded-xl p-6">
        <h3 class="text-lg font-semibold text-white mb-4">Danger Zone</h3>
        <p class="text-slate-300 text-sm mb-4">
            Once you delete an asset, there is no going back. Please be certain.
        </p>
        <form action="{{ path('app_asset_delete', {'id': asset.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this asset? This action cannot be undone.');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ asset.id) }}">
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                Delete Asset
            </button>
        </form>
    </div>
</div>
{% endblock %}
