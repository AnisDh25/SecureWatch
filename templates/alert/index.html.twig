{% extends 'dashboard/layout.html.twig' %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">Alerts</h1>
            <p class="text-slate-400 mt-1">Monitor and manage security alerts and notifications</p>
        </div>
        <div class="flex items-center space-x-3">
            <form method="get" class="flex items-center space-x-3">
                <select name="severity" onchange="this.form.submit()" class="bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="all" {{ currentSeverity == 'all' ? 'selected' : '' }}>All Severities</option>
                    <option value="critical" {{ currentSeverity == 'critical' ? 'selected' : '' }}>Critical</option>
                    <option value="high" {{ currentSeverity == 'high' ? 'selected' : '' }}>High</option>
                    <option value="medium" {{ currentSeverity == 'medium' ? 'selected' : '' }}>Medium</option>
                    <option value="low" {{ currentSeverity == 'low' ? 'selected' : '' }}>Low</option>
                </select>
                <select name="status" onchange="this.form.submit()" class="bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="all" {{ currentStatus == 'all' ? 'selected' : '' }}>All Status</option>
                    <option value="active" {{ currentStatus == 'active' ? 'selected' : '' }}>Active</option>
                    <option value="resolved" {{ currentStatus == 'resolved' ? 'selected' : '' }}>Resolved</option>
                    <option value="escalated" {{ currentStatus == 'escalated' ? 'selected' : '' }}>Escalated</option>
                </select>
                {% if currentSeverity != 'all' or currentStatus != 'all' %}
                    <a href="{{ path('app_alerts') }}" class="bg-slate-600 hover:bg-slate-700 text-white px-3 py-2 rounded-lg text-sm transition-colors">
                        Clear Filters
                    </a>
                {% endif %}
            </form>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400">Total Alerts</p>
                    <p class="text-2xl font-bold text-white">{{ alerts|length }}</p>
                </div>
                <div class="w-12 h-12 bg-blue-600/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                </div>
            </div>
        </div>
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400">Critical</p>
                    <p class="text-2xl font-bold text-red-400">{{ alerts|filter(alert => alert.severity == 'critical')|length }}</p>
                </div>
                <div class="w-12 h-12 bg-red-600/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                </div>
            </div>
        </div>
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400">Active</p>
                    <p class="text-2xl font-bold text-yellow-400">{{ alerts|filter(alert => alert.status == 'active')|length }}</p>
                </div>
                <div class="w-12 h-12 bg-yellow-600/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-400">Resolved</p>
                    <p class="text-2xl font-bold text-green-400">{{ alerts|filter(alert => alert.status == 'resolved')|length }}</p>
                </div>
                <div class="w-12 h-12 bg-green-600/20 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Table -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h2 class="text-lg font-semibold text-white">All Alerts</h2>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Alert</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Severity</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Rule</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Created</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-400 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-700">
                    {% for alert in alerts %}
                    <tr class="hover:bg-slate-700/50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0 mt-1">
                                    {% if alert.severity == 'critical' %}
                                        <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                                    {% elseif alert.severity == 'high' %}
                                        <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
                                    {% elseif alert.severity == 'medium' %}
                                        <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                                    {% else %}
                                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                                    {% endif %}
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-white">
                                        {% if alert.event %}
                                            {{ alert.event.source }} Alert
                                        {% else %}
                                            System Alert
                                        {% endif %}
                                    </p>
                                    {% if alert.event %}
                                        <p class="text-xs text-slate-400 mt-1">{{ alert.event.data|slice(0, 50) }}...</p>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if alert.severity == 'critical' %}
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-600/20 text-red-400">Critical</span>
                            {% elseif alert.severity == 'high' %}
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-orange-600/20 text-orange-400">High</span>
                            {% elseif alert.severity == 'medium' %}
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-600/20 text-yellow-400">Medium</span>
                            {% else %}
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-600/20 text-blue-400">Low</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if alert.status == 'active' %}
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-600/20 text-yellow-400">Active</span>
                            {% elseif alert.status == 'resolved' %}
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-600/20 text-green-400">Resolved</span>
                            {% else %}
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-600/20 text-red-400">Escalated</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">
                            {% if alert.alertRule %}
                                {{ alert.alertRule.name }}
                            {% else %}
                                Unknown Rule
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">
                            <div class="flex items-center space-x-1">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>{{ alert.createdAt|date('M d, H:i') }}</span>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex items-center space-x-2">
                                <a href="{{ path('app_alert_show', {'id': alert.id}) }}" class="text-blue-400 hover:text-blue-300">View</a>
                                {% if alert.status == 'active' %}
                                    <form method="post" action="{{ path('app_alert_resolve', {'id': alert.id}) }}" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('resolve' ~ alert.id) }}">
                                        <button type="submit" class="text-green-400 hover:text-green-300" onclick="return confirm('Are you sure you want to resolve this alert?')">Resolve</button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-slate-400">
                            <div class="flex flex-col items-center">
                                <svg class="w-12 h-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                </svg>
                                <p class="text-lg font-medium">No alerts found</p>
                                <p class="text-sm mt-2">Alerts will appear here when security events trigger rules</p>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
