{% extends 'dashboard/layout.html.twig' %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <a href="{{ path('app_alerts') }}" class="text-slate-400 hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <div>
                <h1 class="text-3xl font-bold text-white">Alert Details</h1>
                <p class="text-slate-400 mt-1">Complete information about this security alert</p>
            </div>
        </div>
        <div class="flex items-center space-x-3">
            {% if alert.severity == 'critical' %}
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-red-600/20 text-red-400 border border-red-600/30">Critical</span>
            {% elseif alert.severity == 'high' %}
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-orange-600/20 text-orange-400 border border-orange-600/30">High</span>
            {% elseif alert.severity == 'medium' %}
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-yellow-600/20 text-yellow-400 border border-yellow-600/30">Medium</span>
            {% else %}
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-blue-600/20 text-blue-400 border border-blue-600/30">Low</span>
            {% endif %}
            {% if alert.status == 'active' %}
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-yellow-600/20 text-yellow-400 border border-yellow-600/30">Active</span>
            {% elseif alert.status == 'resolved' %}
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-green-600/20 text-green-400 border border-green-600/30">Resolved</span>
            {% else %}
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-red-600/20 text-red-400 border border-red-600/30">Escalated</span>
            {% endif %}
        </div>
    </div>

    <!-- Alert Overview -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h2 class="text-lg font-semibold text-white">Alert Overview</h2>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Basic Information -->
                <div class="space-y-4">
                    <div>
                        <h3 class="text-sm font-medium text-slate-400 mb-2">Basic Information</h3>
                        <dl class="space-y-3">
                            <div class="flex justify-between">
                                <dt class="text-sm text-slate-400">Alert ID</dt>
                                <dd class="text-sm text-white font-mono">#{{ alert.id }}</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="text-sm text-slate-400">Severity</dt>
                                <dd class="text-sm text-white capitalize">{{ alert.severity }}</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="text-sm text-slate-400">Status</dt>
                                <dd class="text-sm text-white capitalize">{{ alert.status }}</dd>
                            </div>
                            <div class="flex justify-between">
                                <dt class="text-sm text-slate-400">Created At</dt>
                                <dd class="text-sm text-white">{{ alert.createdAt|date('Y-m-d H:i:s') }}</dd>
                            </div>
                        </dl>
                    </div>
                    
                    {% if alert.alertRule %}
                    <div>
                        <h3 class="text-sm font-medium text-slate-400 mb-2">Alert Rule</h3>
                        <div class="bg-slate-900 rounded-lg p-4">
                            <div class="space-y-2">
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Rule Name</span>
                                    <span class="text-sm text-white font-medium">{{ alert.alertRule.name }}</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Condition</span>
                                    <span class="text-sm text-white font-mono">{{ alert.alertRule.condition }}</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Threshold</span>
                                    <span class="text-sm text-white">{{ alert.alertRule.threshold }}</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Action</span>
                                    <span class="text-sm text-white">{{ alert.alertRule.action }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>

                <!-- Related Information -->
                <div class="space-y-4">
                    {% if alert.event %}
                    <div>
                        <h3 class="text-sm font-medium text-slate-400 mb-2">Related Event</h3>
                        <div class="bg-slate-900 rounded-lg p-4">
                            <div class="space-y-2">
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Event Source</span>
                                    <span class="text-sm text-white">{{ alert.event.source }}</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Event Severity</span>
                                    <span class="text-sm text-white capitalize">{{ alert.event.severity }}</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Event Time</span>
                                    <span class="text-sm text-white">{{ alert.event.timestamp|date('Y-m-d H:i:s') }}</span>
                                </div>
                                <div class="mt-3">
                                    <span class="text-sm text-slate-400">Event Data:</span>
                                    <pre class="text-xs text-slate-300 mt-1 whitespace-pre-wrap font-mono bg-slate-800 rounded p-2">{{ alert.event.data|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if alert.incident %}
                    <div>
                        <h3 class="text-sm font-medium text-slate-400 mb-2">Related Incident</h3>
                        <div class="bg-slate-900 rounded-lg p-4">
                            <div class="space-y-2">
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Incident ID</span>
                                    <span class="text-sm text-white font-mono">#{{ alert.incident.id }}</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Incident Title</span>
                                    <span class="text-sm text-white">{{ alert.incident.title }}</span>
                                </div>
                                <div class="flex items-center justify-between">
                                    <span class="text-sm text-slate-400">Status</span>
                                    <span class="text-sm text-white capitalize">{{ alert.incident.status }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Related Notifications -->
    {% if alert.notifications|length > 0 %}
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h2 class="text-lg font-semibold text-white">Related Notifications ({{ alert.notifications|length }})</h2>
        </div>
        <div class="divide-y divide-slate-700">
            {% for notification in alert.notifications %}
            <div class="p-6 hover:bg-slate-700/50 transition-colors">
                <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-blue-600/20 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="flex-1 min-w-0">
                        <div class="flex items-center justify-between mb-2">
                            <h3 class="text-sm font-medium text-white">{{ notification.message }}</h3>
                            <span class="text-xs text-slate-400">{{ notification.sentAt|date('H:i:s') }}</span>
                        </div>
                        <div class="flex items-center space-x-4 text-xs text-slate-400">
                            <span>Type: {{ notification.type|capitalize }}</span>
                            {% if notification.isRead %}
                                <span class="text-green-400">Read</span>
                            {% else %}
                                <span class="text-yellow-400">Unread</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Actions -->
    <div class="flex items-center space-x-4">
        <a href="{{ path('app_alerts') }}" class="bg-slate-600 hover:bg-slate-700 text-white px-4 py-2 rounded-lg text-sm transition-colors">
            Back to Alerts
        </a>
        {% if alert.event %}
        <a href="{{ path('app_event_show', {'id': alert.event.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm transition-colors">
            View Event Details
        </a>
        {% endif %}
        {% if alert.incident %}
        <a href="{{ path('app_incident_show', {'id': alert.incident.id}) }}" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm transition-colors">
            View Incident Details
        </a>
        {% endif %}
        {% if alert.status == 'active' %}
        <button class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm transition-colors">
            Mark as Resolved
        </button>
        {% endif %}
    </div>
</div>
{% endblock %}
