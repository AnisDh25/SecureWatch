{% extends 'dashboard/layout.html.twig' %}

{% block content %}
<div class="space-y-6">
    <!-- Flash Messages -->
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="bg-{{ type == 'success' ? 'green' : 'red' }}-500 bg-opacity-10 border border-{{ type == 'success' ? 'green' : 'red' }}-500 rounded-lg p-4 mb-6">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-{{ type == 'success' ? 'green' : 'red' }}-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        {% if type == 'success' %}
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        {% else %}
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        {% endif %}
                    </svg>
                    <p class="text-{{ type == 'success' ? 'green' : 'red' }}-400">{{ message }}</p>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">Settings</h1>
            <p class="text-slate-400 mt-1">Configure your SecureWatch application</p>
        </div>
    </div>

    <!-- Settings Sections -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- General Settings -->
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <h2 class="text-lg font-semibold text-white mb-4">General Settings</h2>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Application Name</label>
                    <input type="text" value="SecureWatch" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Time Zone</label>
                    <select class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option>UTC</option>
                        <option>Europe/Paris</option>
                        <option>America/New_York</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Theme</label>
                    <div class="flex items-center justify-between p-3 bg-slate-900 rounded-lg">
                        <div class="flex items-center space-x-3">
                            <svg class="w-5 h-5 text-slate-400" id="theme-icon-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                            </svg>
                            <svg class="w-5 h-5 text-slate-400 hidden" id="theme-icon-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                            </svg>
                            <span class="text-slate-300" id="theme-label">Dark Mode</span>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" id="theme-toggle" class="sr-only peer">
                            <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                        </label>
                    </div>
                    <p class="text-xs text-slate-400 mt-2">Choose between light and dark theme for the interface</p>
                </div>
                <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                    Save Changes
                </button>
            </div>
        </div>

        <!-- Notification Settings -->
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <h2 class="text-lg font-semibold text-white mb-4">Notifications</h2>
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-slate-300">Email Alerts</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" checked class="sr-only peer">
                        <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                    </label>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-slate-300">SMS Alerts</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer">
                        <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                    </label>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-slate-300">Webhook Notifications</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" checked class="sr-only peer">
                        <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                    </label>
                </div>
            </div>
        </div>

        <!-- Security Settings -->
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
            <h2 class="text-lg font-semibold text-white mb-4">Security</h2>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Session Timeout (minutes)</label>
                    <input type="number" value="30" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-300 mb-2">Password Policy</label>
                    <select class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option>Standard</option>
                        <option>High Security</option>
                        <option>Enterprise</option>
                    </select>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-slate-300">Two-Factor Auth</span>
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer">
                        <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                    </label>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Rules Configuration -->
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SOC_ANALYST') %}
    <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-white">Alert Rules</h2>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_alert_rule_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add New Rule
            </a>
            {% endif %}
        </div>
        
        {% if alertRules|length > 0 %}
        <div class="space-y-3">
            {% for rule in alertRules %}
            <div class="flex items-center justify-between p-3 bg-slate-900 rounded-lg">
                <div>
                    <p class="text-sm font-medium text-white">{{ rule.name }}</p>
                    <p class="text-xs text-slate-400">{{ rule.condition }} - {{ rule.action }}</p>
                    {% if rule.threshold %}
                    <p class="text-xs text-slate-500">Threshold: {{ rule.threshold }}</p>
                    {% endif %}
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-xs text-green-400">Active</span>
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="flex items-center space-x-1">
                        <a href="{{ path('app_alert_rule_edit', {'id': rule.id}) }}" class="text-slate-400 hover:text-white">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </a>
                        <form method="post" action="{{ path('app_alert_rule_delete', {'id': rule.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this rule?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rule.id) }}">
                            <button type="submit" class="text-red-400 hover:text-red-300">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                            </button>
                        </form>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-8">
            <svg class="w-12 h-12 mx-auto mb-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <p class="text-slate-400 mb-4">No alert rules configured yet.</p>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_alert_rule_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 inline-flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create First Rule
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<script>
// Theme Switcher
document.addEventListener('DOMContentLoaded', function() {
    const themeToggle = document.getElementById('theme-toggle');
    const themeIconDark = document.getElementById('theme-icon-dark');
    const themeIconLight = document.getElementById('theme-icon-light');
    const themeLabel = document.getElementById('theme-label');
    
    // Get current theme from localStorage or default to dark
    const currentTheme = localStorage.getItem('theme') || 'dark';
    
    // Set initial state
    if (currentTheme === 'light') {
        themeToggle.checked = true;
        themeIconDark.classList.add('hidden');
        themeIconLight.classList.remove('hidden');
        themeLabel.textContent = 'Light Mode';
        document.documentElement.classList.add('light-mode');
    } else {
        themeToggle.checked = false;
        themeIconDark.classList.remove('hidden');
        themeIconLight.classList.add('hidden');
        themeLabel.textContent = 'Dark Mode';
        document.documentElement.classList.remove('light-mode');
    }
    
    // Handle theme toggle
    themeToggle.addEventListener('change', function() {
        if (this.checked) {
            // Switch to light mode
            localStorage.setItem('theme', 'light');
            document.documentElement.classList.add('light-mode');
            themeIconDark.classList.add('hidden');
            themeIconLight.classList.remove('hidden');
            themeLabel.textContent = 'Light Mode';
        } else {
            // Switch to dark mode
            localStorage.setItem('theme', 'dark');
            document.documentElement.classList.remove('light-mode');
            themeIconDark.classList.remove('hidden');
            themeIconLight.classList.add('hidden');
            themeLabel.textContent = 'Dark Mode';
        }
    });
});
</script>
{% endblock %}
