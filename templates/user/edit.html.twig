{% extends 'dashboard/layout.html.twig' %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">Edit User</h1>
            <p class="text-slate-400 mt-1">Update user account information and permissions</p>
        </div>
        <a href="{{ path('app_user_index') }}" class="bg-slate-600 hover:bg-slate-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Users
        </a>
    </div>

    <!-- User Form -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h2 class="text-lg font-semibold text-white">Edit User: {{ user.username }}</h2>
        </div>
        <div class="p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <!-- Username Field -->
            <div>
                {{ form_label(form.username, 'Username', {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white w-full focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.username, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
            </div>

            <!-- Email Field -->
            <div>
                {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white w-full focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.email, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
            </div>

            <!-- Role Field -->
            <div>
                {{ form_label(form.role, 'User Role', {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                {{ form_widget(form.role, {'attr': {'class': 'bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white w-full focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.role, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                <p class="text-xs text-slate-400 mt-1">Select the primary role for this user</p>
            </div>

            <!-- Permissions Field -->
            <div>
                {{ form_label(form.roles, 'Permissions', {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                <div class="space-y-2">
                    {% for choice in form.roles %}
                        <div class="flex items-center">
                            {{ form_widget(choice, {'attr': {'class': 'h-4 w-4 text-blue-600 bg-slate-700 border-slate-600 rounded focus:ring-blue-500'}}) }}
                            {{ form_label(choice, choice.vars.label, {'label_attr': {'class': 'ml-2 text-sm text-slate-300'}}) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(form.roles, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                <p class="text-xs text-slate-400 mt-1">Select the permissions for this user</p>
            </div>

            <!-- Password Field -->
            <div>
                {{ form_label(form.plainPassword, 'Password (leave blank to keep current)', {'label_attr': {'class': 'block text-sm font-medium text-slate-300 mb-2'}}) }}
                {{ form_widget(form.plainPassword, {'attr': {'class': 'bg-slate-700 border border-slate-600 rounded-lg px-3 py-2 text-white w-full focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.plainPassword, {'attr': {'class': 'text-red-400 text-sm mt-1'}}) }}
                <p class="text-xs text-slate-400 mt-1">Only enter if you want to change the password</p>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end space-x-3 pt-6 border-t border-slate-700">
                <a href="{{ path('app_user_index') }}" class="bg-slate-600 hover:bg-slate-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                    Cancel
                </a>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                    Update User
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
