{% extends 'dashboard/layout.html.twig' %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">User Profile</h1>
            <p class="text-slate-400 mt-1">Manage your account information and preferences</p>
        </div>
    </div>

    <!-- Profile Card -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h2 class="text-lg font-semibold text-white">Profile Information</h2>
        </div>
        <div class="p-6">
            <div class="flex items-center space-x-6 mb-8">
                <div class="w-20 h-20 bg-blue-600 rounded-full flex items-center justify-center">
                    <span class="text-2xl font-bold text-white">{{ user.username|slice(0, 2)|upper }}</span>
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-white">{{ user.username }}</h3>
                    <p class="text-slate-400">{{ user.email }}</p>
                    <div class="mt-2">
                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-600/20 text-blue-400">
                            {{ user.role|capitalize }}
                        </span>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Account Information -->
                <div>
                    <h4 class="text-lg font-medium text-white mb-4">Account Information</h4>
                    <dl class="space-y-3">
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-slate-400">Username</dt>
                            <dd class="text-sm text-white">{{ user.username }}</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-slate-400">Email Address</dt>
                            <dd class="text-sm text-white">{{ user.email }}</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-slate-400">Role</dt>
                            <dd class="text-sm text-white">{{ user.role|capitalize }}</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-slate-400">User ID</dt>
                            <dd class="text-sm text-white">#{{ user.id }}</dd>
                        </div>
                    </dl>
                </div>

                <!-- Security Information -->
                <div>
                    <h4 class="text-lg font-medium text-white mb-4">Security Information</h4>
                    <dl class="space-y-3">
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-slate-400">Permissions</dt>
                            <dd class="text-sm text-white">
                                {% for role in user.roles %}
                                    {% if role != 'ROLE_USER' %}
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-600/20 text-green-400 mr-1">
                                            {{ role|replace({'ROLE_': ''}) }}
                                        </span>
                                    {% endif %}
                                {% endfor %}
                            </dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-slate-400">Account Status</dt>
                            <dd class="text-sm text-white">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-600/20 text-green-400">
                                    Active
                                </span>
                            </dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-slate-400">Last Login</dt>
                            <dd class="text-sm text-white">Today</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-8 pt-6 border-t border-slate-700">
                <div class="flex items-center justify-end space-x-3">
                    <button class="bg-slate-600 hover:bg-slate-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                        Change Password
                    </button>
                    <a href="{{ path('app_settings') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
                        Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Activity Summary -->
    <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-700">
            <h2 class="text-lg font-semibold text-white">Recent Activity</h2>
        </div>
        <div class="p-6">
            <div class="space-y-4">
                <div class="flex items-center space-x-3 p-3 bg-slate-700/50 rounded-lg">
                    <div class="w-8 h-8 bg-blue-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-white">Logged into dashboard</p>
                        <p class="text-xs text-slate-400">Just now</p>
                    </div>
                </div>
                
                <div class="flex items-center space-x-3 p-3 bg-slate-700/50 rounded-lg">
                    <div class="w-8 h-8 bg-green-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-white">Profile updated</p>
                        <p class="text-xs text-slate-400">2 hours ago</p>
                    </div>
                </div>
                
                <div class="flex items-center space-x-3 p-3 bg-slate-700/50 rounded-lg">
                    <div class="w-8 h-8 bg-yellow-600/20 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-white">Viewed security alerts</p>
                        <p class="text-xs text-slate-400">5 hours ago</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
